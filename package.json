{
  "name": "@mctx-ai/mcp-server-monorepo",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.15.4",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm run --recursive --if-present build",
    "test": "pnpm run --recursive --if-present test",
    "lint": "pnpm run --recursive --if-present lint",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\"",
    "release": "multi-semantic-release"
  },
  "devDependencies": {
    "@anolilab/multi-semantic-release": "4.1.1",
    "@anolilab/semantic-release-pnpm": "5.0.0",
    "@eslint/js": "^9.19.0",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/commit-analyzer": "13.0.1",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "12.0.6",
    "@semantic-release/release-notes-generator": "14.1.0",
    "conventional-changelog-conventionalcommits": "9.1.0",
    "eslint": "^9.19.0",
    "prettier": "^3.2.5",
    "semantic-release": "25.0.3"
  }
}
